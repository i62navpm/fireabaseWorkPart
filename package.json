  "repository": {
    "type": "git",
    "url": "git+https://github.com/i62navpm/firebaseWorkPart.git"
  },
  "keywords": [
    "vue",
    "google-cloud",
    "cloud-build",
    "firebase",
    "lerna"
  ],
  "author": "Manuel Navarro PÃ©rez",
